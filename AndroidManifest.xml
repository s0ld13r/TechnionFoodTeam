<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.technionfoodteam"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/fork_medium"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:name="com.gmail.technionfoodteam.TechnionFoodApp" android:logo="@drawable/fork_high">
        <activity
            android:name="com.gmail.technionfoodteam.RestaurantsActivity"
            android:label="@string/app_name" 
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gmail.technionfoodteam.RestaurantActivity"
            android:label="@string/app_name" 
            android:configChanges="orientation|keyboardHidden|screenSize" />          
         <activity
            android:name="com.gmail.technionfoodteam.DishActivity"
            android:label="@string/app_name" 
            android:configChanges="orientation|keyboardHidden|screenSize" /> 
            
    </application>
</manifest>
